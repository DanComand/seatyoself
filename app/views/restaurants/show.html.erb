 <h3>Reservations</h3>

 <p><%= link_to 'Back To Restaurants', '/restaurants' %></p>

  <p>Reservations for <%= @restaurant.name %></p>

  <% @restaurant.reservations.each do |reservation| %>
    <p>
      <p>Reservation is on:<%= reservation.date %>
      at <%= reservation.date %>
      for <%= reservation.party %> people</p>
      <br>
      <% if reservation.user != nil %>
        <em> by <%= reservation.user.firstname %></em>
        Created at: <%= reservation.created_at %>
      <% end %>
    </p>
<% end %>

  <% if current_user %>
  <h4>New Reservation</h4>

  <%= form_for([@restaurant, @reservation]) do |f| %>
    <% if @reservation.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

        <ul>
        <% @reservation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :date %><br />
      <%= f.datetime_select :date, start_hour: @restaurant.opening, end_hour: @restaurant.closing %>
    </div>
    <div class="field">
      <%= f.label :party %><br />
      <%= f.text_area :party %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

<% else %>
  <p>Please <%= link_to "log in", new_session_path %> to add a reservation.</p> 
<% end %>





